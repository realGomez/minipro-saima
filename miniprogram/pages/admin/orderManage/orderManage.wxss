.ordermanage-page{
  padding: 0 20rpx;
}

/* date */
.dateItemsContainer{
    overflow: auto;
    width: 100%;
    background: #efefef;
    border-bottom: 1rpx solid #fff;
}

.dateItems{
  width: fit-content;
  white-space: nowrap;
  display: grid;
  grid-auto-flow: column;
}


.dateItem{
  display: inline-block;
  padding: 10rpx 20rpx;
  text-align: center;
  /* width: 100rpx; */
  border-left: 1px solid #fffdfd;

}

.dateItem.selected{
  background-color: #dadada;
}

.dateItem:first-child{
  border-left: 0;
}


.week{
  font-size:30rpx;
}
.date{
  font-size:26rpx;
}

/* date end*/


/* order filter */

.filterContainer{
  overflow: auto;
  width: 100%;
  background: #efefef;
}

view button[type="pick"]{
  background-color: transparent;
  color: #1e1e1e;
  border-radius:0 ;
  font-weight: 300;
  border-left: 1px solid #fffdfd;
}

view button[type="pick"]:first-child{
  border-left: 0;
}


view button[type="pick"].selected{
  background-color: #dadada;
}

.order-filter{
  overflow: auto;
  width: 100%;
  background: #efefef;
}

.item.title-row{
  font-weight: 700;
}

.item{
  display: grid;
  grid-auto-flow: column;
  grid-template-columns: 2fr 1fr 1fr 1fr 0.5fr;
  font-size: 28rpx;
  align-items: center;
  border-top: 1rpx solid #EAEAEA;
  padding: 16rpx 0;
  font-size: 24rpx;
}

.item:last-child{
  border-bottom: 1rpx solid #EAEAEA;
}